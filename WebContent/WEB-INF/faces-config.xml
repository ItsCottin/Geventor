<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	
	<converter>
	    <converter-id>ConversorDateView</converter-id>
	    <converter-class>br.com.pluri.eventor.utils.ConversorDateView</converter-class>
	</converter>
	
	<converter>
	    <converter-id>ConversorHoraView</converter-id>
	    <converter-class>br.com.pluri.eventor.utils.ConversorHoraView</converter-class>
	</converter>
	
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
		<message-bundle>resources.messages</message-bundle>
	</application>
	
</faces-config>
